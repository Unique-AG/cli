{
  "name": "@unique-ag/cli",
  "description": "Unique CLI, wrapping the most common actions needed by Uniques clients into a single command line tool.",
  "version": "0.5.0",
  "author": "Unique AG",
  "bin": {
    "qcli": "./bin/run.js"
  },
  "bugs": "https://github.com/Unique-AG/cli/issues",
  "dependencies": {
    "@oclif/core": "^4.0.23",
    "@oclif/plugin-help": "^6.2.12",
    "@oclif/plugin-plugins": "^5.4.9",
    "joi": "^17.13.3",
    "tempy": "^3.1.0",
    "yaml": "^2.5.1"
  },
  "devDependencies": {
    "@oclif/prettier-config": "^0.2.1",
    "@oclif/test": "^4.0.9",
    "@types/chai": "^4.3.19",
    "@types/mocha": "^10.0.8",
    "@types/node": "^18.19.50",
    "chai": "^4.5.0",
    "eslint": "^8.57.1",
    "eslint-config-oclif": "^5.2.1",
    "eslint-config-oclif-typescript": "^3.1.11",
    "eslint-config-prettier": "^9.1.0",
    "mocha": "^10.7.3",
    "oclif": "^4.14.35",
    "shx": "^0.3.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "/bin",
    "/dist",
    "/oclif.manifest.json"
  ],
  "homepage": "https://github.com/Unique-AG/cli",
  "keywords": [
    "oclif"
  ],
  "license": "MIT",
  "main": "dist/index.js",
  "type": "module",
  "oclif": {
    "bin": "qcli",
    "dirname": "qcli",
    "commands": "./dist/commands",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-plugins"
    ],
    "topicSeparator": ":",
    "topics": {
      "az:acr": {
        "description": "Functionality that leverages the azure-cli to tackle certain daily challenges more elegantly."
      },
      "mirror": {
        "description": "Functionality needed to mirror Unique artifacts into client environments to ensure availability, scalability and resilience."
      }
    }
  },
  "repository": "Unique-AG/cli",
  "scripts": {
    "build": "npm run clean && tsc -b",
    "clean": "shx rm -rf dist",
    "lint": "eslint . --ext .ts",
    "postpack": "shx rm -f oclif.manifest.json",
    "posttest": "npm run lint",
    "prepack": "oclif manifest && npm run readme",
    "readme": "npm run build && oclif readme --no-aliases",
    "test": "mocha --forbid-only \"test/**/*.test.ts\"",
    "version": "npm run readme && git add README.md"
  },
  "types": "dist/index.d.ts"
}
